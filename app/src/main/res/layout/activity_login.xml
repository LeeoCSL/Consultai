<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="br.com.carregai.carregai2.activity.LoginActivity">

    <ImageView
        android:id="@+id/logo_main"
        android:layout_marginTop="16dp"
        android:src="@drawable/ic_logo_azul"
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:drawableLeft="@drawable/ic_person_outline_black_24dp"
        android:drawablePadding="8dp"
        android:maxLines="1"
        android:background="@drawable/input_field"
        android:id="@+id/input_email"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/logo_main"
        android:hint="Email"
        android:inputType="textEmailAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:drawableLeft="@drawable/ic_lock_outline_black_24dp"
        android:background="@drawable/input_field"
        android:maxLines="1"
        android:drawablePadding="8dp"
        android:inputType="textPassword"
        android:id="@+id/input_password"
        android:layout_marginTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Senha"
        android:layout_below="@+id/input_email"/>

    <Button
        android:id="@+id/btn_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/input_password"
        android:layout_marginTop="16dp"
        android:background="@drawable/btn_blue"
        android:onClick="handlerLogin"
        android:text="Login"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/txt_esqueceu_senha"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/btn_login"
        android:layout_marginTop="16dp"
        android:onClick="forgetPassword"
        android:text="Esqueceu sua senha?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:id="@+id/list_icons"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:layout_below="@+id/txt_esqueceu_senha"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.facebook.login.widget.LoginButton
            android:onClick="loginWithFacebook"
            android:id="@+id/login_fb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.google.android.gms.common.SignInButton
            android:id="@+id/login_google"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </com.google.android.gms.common.SignInButton>
    </LinearLayout>

    <LinearLayout
        android:layout_alignParentBottom="true"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:layout_below="@+id/list_icons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="NÃ£o tem uma conta? "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:onClick="register"
            android:textStyle="bold"
            android:text="Registre-se!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
</RelativeLayout>